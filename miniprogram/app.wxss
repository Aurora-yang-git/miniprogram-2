/* app.wxss */
@import 'miniprogram_npm/tdesign-miniprogram/common/style/index.wxss';

/* =========================================================
   LearnCards UI (同步 ui/ 网站的视觉：light/dark + 组件积木)
   ========================================================= */

page {
  /* Default theme: light (Tailwind neutral/blue) */
  --lc-bg: #fafafa; /* neutral-50 */
  --lc-surface: #ffffff;
  --lc-surface-2: #f5f5f5; /* neutral-100 */
  --lc-text: #171717; /* neutral-900 */
  --lc-text-muted: #737373; /* neutral-500 */
  --lc-text-subtle: #a3a3a3; /* neutral-400 */
  --lc-border: #e5e5e5; /* neutral-200 */
  --lc-border-strong: #d4d4d4; /* neutral-300 */

  --lc-primary: #2563eb; /* blue-600 */
  --lc-primary-hover: #1d4ed8; /* blue-700 */
  --lc-primary-50: #eff6ff; /* blue-50 */
  --lc-primary-950-20: rgba(23, 37, 84, 0.2);

  --lc-success: #16a34a; /* green-600 */
  --lc-success-50: #f0fdf4; /* green-50 */
  --lc-success-950-20: rgba(20, 83, 45, 0.2);

  --lc-danger: #dc2626; /* red-600 */
  --lc-danger-50: #fef2f2; /* red-50 */
  --lc-danger-950-20: rgba(69, 10, 10, 0.2);

  --lc-warning-50: #fefce8; /* yellow-50 */
  --lc-warning-border: #fde68a; /* yellow-200 */
  --lc-warning-text: #78350f; /* amber-900 */

  --lc-radius-lg: 20rpx;
  --lc-radius-xl: 24rpx;
  --lc-radius-2xl: 32rpx;
  --lc-radius-full: 9999rpx;

  --lc-header-h: 128rpx;
  /* Native tabBar already reserves space; keep extra padding at 0 by default. */
  --lc-tabbar-h: 0rpx;

  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  color: var(--lc-text);
  background: var(--lc-bg);
  box-sizing: border-box;
}

.lc-theme-dark {
  --lc-bg: #0a0a0a; /* neutral-950 */
  --lc-surface: #171717; /* neutral-900 */
  --lc-surface-2: #262626; /* neutral-800 */
  --lc-text: #ffffff;
  --lc-text-muted: #a3a3a3; /* neutral-400 */
  --lc-text-subtle: #737373; /* neutral-500 */
  --lc-border: #262626; /* neutral-800 */
  --lc-border-strong: #404040; /* neutral-700 */

  /* dark variants used as "tint/20" in ui/ */
  --lc-primary-50: rgba(23, 37, 84, 0.2);
  --lc-primary-950-20: rgba(23, 37, 84, 0.2);
  --lc-success-50: rgba(20, 83, 45, 0.2);
  --lc-success-950-20: rgba(20, 83, 45, 0.2);
  --lc-danger-50: rgba(69, 10, 10, 0.2);
  --lc-danger-950-20: rgba(69, 10, 10, 0.2);
  --lc-warning-50: rgba(113, 63, 18, 0.2);
  --lc-warning-border: rgba(113, 63, 18, 0.6);
  --lc-warning-text: #fef9c3;
}

/* ======================
   App-level scaffolding
   ====================== */

.lc-root {
  min-height: 100vh;
  background: var(--lc-bg);
  color: var(--lc-text);
}

.lc-header {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 1000;
  background: var(--lc-surface);
  border-bottom: 2rpx solid var(--lc-border);
}

.lc-header-inner {
  height: calc(var(--lc-header-h) + var(--lc-status-bar, 0rpx));
  padding-top: var(--lc-status-bar, 0rpx);
  padding-left: 32rpx;
  padding-right: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.lc-header-title {
  font-size: 32rpx;
  font-weight: 600;
}

.lc-icon-btn {
  width: 72rpx;
  height: 72rpx;
  border-radius: var(--lc-radius-lg);
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.lc-icon-btn {
  /* Prefer built-in hover state over :active for better UX (per audits). */
}

.lc-main {
  padding-top: calc(var(--lc-header-h) + var(--lc-status-bar, 0rpx));
  padding-bottom: calc(var(--lc-tabbar-h) + var(--lc-safe-bottom, 0rpx));
  min-height: 100vh;
  box-sizing: border-box;
}

.lc-container {
  padding: 48rpx 32rpx;
  max-width: 1200rpx;
  margin: 0 auto;
  box-sizing: border-box;
}

/* =========
   Elements
   ========= */

.lc-h1 {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--lc-text);
}
.lc-p {
  font-size: 26rpx;
  color: var(--lc-text-muted);
  line-height: 1.6;
}

.lc-section-title {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--lc-text-muted);
  margin-bottom: 24rpx;
}

.lc-card {
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-xl);
  padding: 32rpx;
  box-sizing: border-box;
}

.lc-input {
  width: 100%;
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-xl);
  box-sizing: border-box;
  color: var(--lc-text);
  font-size: 28rpx;
}

/* NOTE: On some devices, <input> doesn't expand with vertical padding,
   which can make typed text appear "missing". Use explicit height/line-height. */
input.lc-input {
  height: 96rpx;
  line-height: 96rpx;
  padding: 0 32rpx;
}

textarea.lc-input {
  padding: 24rpx 32rpx;
  line-height: 1.7;
}
.lc-input:focus {
  border-color: var(--lc-primary);
}

.lc-chip-row {
  display: flex;
  white-space: nowrap;
  padding-left: 32rpx;
  padding-right: 32rpx;
  box-sizing: border-box;
}

.lc-chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  border-radius: var(--lc-radius-full);
  font-size: 26rpx;
  border: 2rpx solid var(--lc-border);
  color: var(--lc-text-muted);
  background: var(--lc-surface);
  box-sizing: border-box;
}
.lc-chip {
  /* click feedback is handled by hover-class on the component */
}
.lc-chip.is-active {
  background: var(--lc-primary);
  border-color: var(--lc-primary);
  color: #ffffff;
}

.lc-btn {
  border-radius: var(--lc-radius-xl);
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.lc-btn-primary {
  background: var(--lc-primary);
  color: #fff;
}
.lc-btn-primary {
  /* click feedback is handled by hover-class on the component */
}

.lc-btn-outline {
  background: var(--lc-surface);
  border: 4rpx solid var(--lc-primary);
  color: var(--lc-primary);
}

.lc-btn-danger-outline {
  background: var(--lc-surface);
  border: 4rpx solid var(--lc-danger);
  color: var(--lc-danger);
}

.lc-grid-2 {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.lc-tile {
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-xl);
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  box-sizing: border-box;
}
.lc-tile {
  /* click feedback is handled by hover-class on the component */
}

.lc-badge {
  padding: 8rpx 16rpx;
  border-radius: var(--lc-radius-lg);
  font-size: 24rpx;
  font-weight: 600;
  background: var(--lc-primary);
  color: #fff;
}

.lc-progress-track {
  width: 100%;
  height: 16rpx;
  background: var(--lc-surface-2);
  border-radius: var(--lc-radius-full);
  overflow: hidden;
}
.lc-progress-bar {
  height: 100%;
  background: var(--lc-primary);
  border-radius: var(--lc-radius-full);
}

/* ==========
   Hover states (prefer over :active)
   ========== */

.lc-hover-bg {
  background: var(--lc-surface-2);
}

.lc-hover-border {
  border-color: var(--lc-border-strong);
}

.lc-hover-primary {
  background: var(--lc-primary-hover);
}

.lc-hover-danger-bg {
  background: var(--lc-danger-50);
}

/* ==========
   Modal base
   ========== */

.lc-modal-overlay {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  box-sizing: border-box;
}

.lc-modal {
  width: 100%;
  max-width: 1200rpx;
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-2xl);
  overflow: hidden;
}

.lc-modal-header {
  padding: 32rpx;
  border-bottom: 2rpx solid var(--lc-border);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.lc-modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--lc-text);
}

.lc-modal-body {
  padding: 32rpx;
  box-sizing: border-box;
}

.lc-modal-footer {
  padding: 32rpx;
  border-top: 2rpx solid var(--lc-border);
  display: flex;
  gap: 24rpx;
  box-sizing: border-box;
}

/* ======================
   Lightweight loading UI
   ====================== */

.lc-inline-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  color: var(--lc-text-muted);
  font-size: 24rpx;
}

.lc-mini-spinner {
  width: 28rpx;
  height: 28rpx;
  border-radius: var(--lc-radius-full);
  border: 4rpx solid var(--lc-border);
  border-top-color: var(--lc-primary);
  animation: lcSpin 0.8s linear infinite;
  box-sizing: border-box;
}

@keyframes lcSpin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
