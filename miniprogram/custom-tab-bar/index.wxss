.lc-tabbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--lc-surface);
  border-top: 2rpx solid var(--lc-border);
  z-index: 1000;
}

.lc-tabbar-inner {
  height: var(--lc-tabbar-h);
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
}

.lc-tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 0;
  border-radius: var(--lc-radius-lg);
  color: var(--lc-text-muted);
  box-sizing: border-box;
}

.lc-tab-label {
  font-size: 20rpx;
  line-height: 1;
}

.lc-tab-item.is-active {
  color: var(--lc-primary);
}



