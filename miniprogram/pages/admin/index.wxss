.card {
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-xl);
  padding: 24rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  padding: 12rpx 0;
}

.row + .row {
  border-top: 2rpx solid var(--lc-border);
}

.row.column {
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
}

.label {
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.value {
  font-size: 24rpx;
  color: var(--lc-text);
}

.mono {
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
}

.result {
  margin-top: 24rpx;
  padding: 16rpx;
  background: var(--lc-surface);
  border: 2rpx dashed var(--lc-border);
  border-radius: var(--lc-radius-xl);
  color: var(--lc-text-muted);
  font-size: 22rpx;
  white-space: pre-wrap;
  word-break: break-word;
}

