.title-block {
  margin-bottom: 40rpx;
}

.feynman-header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.step-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 48rpx;
}

.step-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.step-line {
  flex: 1;
  height: 8rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-border);
}

.step-line.is-active {
  background: var(--lc-primary);
}

.step-dot {
  width: 64rpx;
  height: 64rpx;
  border-radius: var(--lc-radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 600;
  background: var(--lc-border);
  color: var(--lc-text-muted);
}

.step-dot.is-active {
  background: var(--lc-primary);
  color: #fff;
}

.section {
  margin-top: 24rpx;
}

.upload-box {
  background: var(--lc-surface);
  border: 4rpx dashed var(--lc-border-strong);
  border-radius: var(--lc-radius-xl);
  padding: 96rpx 32rpx;
  text-align: center;
  box-sizing: border-box;
}

.upload-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-top: 24rpx;
  margin-bottom: 8rpx;
}

.upload-sub {
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.full-btn {
  width: 100%;
  margin-top: 24rpx;
}

.mini-spinner {
  width: 28rpx;
  height: 28rpx;
  border-radius: var(--lc-radius-full);
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  border-top-color: #fff;
  animation: spin 0.8s linear infinite;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 8rpx;
}

.field-label {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 16rpx;
}

.textarea {
  min-height: 360rpx;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
}

.hint-card {
  border-radius: var(--lc-radius-xl);
  padding: 32rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.hint-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: var(--lc-text);
}

.hint-item {
  font-size: 24rpx;
  color: var(--lc-text-muted);
  line-height: 1.8;
}

.hint-card.good {
  background: var(--lc-success-50);
  border: 2rpx solid rgba(22, 163, 74, 0.25);
}

.hint-card.warn {
  background: rgba(249, 115, 22, 0.12);
  border: 2rpx solid rgba(249, 115, 22, 0.25);
}

.hint-card.info {
  background: var(--lc-primary-50);
  border: 2rpx solid rgba(37, 99, 235, 0.25);
}

.hint-info-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 8rpx;
}

.hint-info-sub {
  font-size: 22rpx;
  color: var(--lc-text-muted);
  line-height: 1.6;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}


