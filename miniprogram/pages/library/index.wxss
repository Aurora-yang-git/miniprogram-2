.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f8fa;
}

.search-bar {
  padding: 24rpx 32rpx 0;
  box-sizing: border-box;
}

.card-list {
  flex: 1;
  padding: 24rpx 32rpx 120rpx;
  box-sizing: border-box;
}

.card-item {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.card-question {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d2129;
}

.card-tags t-tag {
  margin-left: 12rpx;
}

.card-subtitle {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #86909c;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hot {
  font-size: 22rpx;
  color: #ff7a45;
  font-weight: 600;
}

.detail-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  padding: 24rpx 32rpx 48rpx;
  box-sizing: border-box;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.q-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d2129;
  flex: 1;
  margin-right: 20rpx;
}

.detail-content {
  flex: 1;
}

.detail-image {
  width: 100%;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.section-block {
  padding: 16rpx 0;
}

.section-title {
  font-size: 26rpx;
  color: #4e5969;
  margin-bottom: 12rpx;
}

.formula-box {
  padding: 16rpx;
  background: #f2f3f5;
  border-radius: 16rpx;
  font-family: 'Courier New', monospace;
  font-size: 26rpx;
}

.text-content {
  font-size: 28rpx;
  color: #1d2129;
  line-height: 44rpx;
}

.text-muted {
  font-size: 24rpx;
  color: #c9ced6;
}

.memory-hint {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  margin: 24rpx 0;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #fff7e6;
  color: #ad6800;
}

.hint-icon {
  font-size: 30rpx;
}

.hint-text {
  font-size: 26rpx;
  line-height: 42rpx;
}

.review-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}

.review-actions t-button {
  flex: 1;
}


