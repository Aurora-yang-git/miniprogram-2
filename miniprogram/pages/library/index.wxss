.create-container {
  padding-top: 48rpx;
}

.create-title-block {
  margin-bottom: 40rpx;
}

.step-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 48rpx;
}

.step-item {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.step-line {
  flex: 1;
  height: 8rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-border);
}

.step-line.is-active {
  background: var(--lc-primary);
}

.step-dot {
  width: 64rpx;
  height: 64rpx;
  border-radius: var(--lc-radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  font-weight: 600;
  background: var(--lc-border);
  color: var(--lc-text-muted);
}

.step-dot.is-active {
  background: var(--lc-primary);
  color: #fff;
}

.create-section {
  margin-top: 24rpx;
}

.create-section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 24rpx;
}

.mode-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.mode-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 32rpx;
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-xl);
  box-sizing: border-box;
}

.mode-item:active {
  border-color: var(--lc-primary);
}

.mode-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: var(--lc-radius-lg);
  background: var(--lc-primary-50);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.mode-label {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 8rpx;
}

.mode-desc {
  font-size: 24rpx;
  color: var(--lc-text-muted);
  line-height: 1.6;
}

.field-block {
  margin-bottom: 32rpx;
}

.field-label {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 16rpx;
}

.textarea {
  min-height: 360rpx;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
}

.upload-box {
  background: var(--lc-surface);
  border: 4rpx dashed var(--lc-border-strong);
  border-radius: var(--lc-radius-xl);
  padding: 96rpx 32rpx;
  text-align: center;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}

.upload-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-top: 24rpx;
  margin-bottom: 8rpx;
}

.upload-sub {
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.upload-picked {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: var(--lc-text-subtle);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.upload-clear {
  color: var(--lc-primary);
  font-weight: 600;
}

.upload-clear:active {
  opacity: 0.7;
}

.create-btn {
  width: 100%;
  margin-top: 24rpx;
}

.create-btn[disabled] {
  opacity: 0.5;
}

.generate-wrap {
  padding-top: 24rpx;
}

.center {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  gap: 16rpx;
  margin: 32rpx 0;
}

.spinner {
  width: 128rpx;
  height: 128rpx;
  border-radius: var(--lc-radius-full);
  border: 10rpx solid var(--lc-border);
  border-top-color: var(--lc-primary);
  animation: spin 1s linear infinite;
}

.generate-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--lc-text);
}

.generate-card {
  padding: 32rpx;
}

.progress-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 0;
}

.check-dot {
  width: 48rpx;
  height: 48rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-success);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  flex-shrink: 0;
}

.pulse-dot {
  width: 48rpx;
  height: 48rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  animation: pulse 1s ease-in-out infinite;
}

.idle-dot {
  width: 48rpx;
  height: 48rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-border);
  flex-shrink: 0;
}

.mini-spinner {
  width: 24rpx;
  height: 24rpx;
  border-radius: var(--lc-radius-full);
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  border-top-color: #fff;
  animation: spin 0.8s linear infinite;
}

.progress-text {
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.success-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-success);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}
