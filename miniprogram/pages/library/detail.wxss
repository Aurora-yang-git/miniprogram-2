.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.search-bar {
  padding: 16rpx 32rpx;
}

.card-list {
  flex: 1;
  padding: 24rpx 0;
}

/* 列表项：档案风格 */
.library-item {
  background: var(--c-card);
  border-radius: var(--r-base);
  border: var(--border-base);
  box-shadow: 0 4rpx 0 var(--c-border);
  padding: 32rpx;
  margin: 0 32rpx 24rpx;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  transition: all 0.1s;
}

.library-item:active {
  transform: translateY(2rpx);
  box-shadow: none;
}

.library-item::before {
  content: '';
  position: absolute; left: 0; top: 0; bottom: 0;
  width: 12rpx;
  background: var(--c-primary);
}

.item-content { flex: 1; padding-left: 20rpx; }
.item-title { font-size: 32rpx; font-weight: 700; color: var(--c-text-title); margin-bottom: 12rpx; }
.item-tags { display: flex; flex-wrap: wrap; gap: 12rpx; }
.tag-box { 
  font-size: 22rpx; color: var(--c-text-body); 
  background: var(--c-bg); 
  padding: 6rpx 16rpx; border-radius: 8rpx; 
  font-weight: 600;
}

/* 详情弹窗样式 */
.detail-container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.q-title {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--c-text-title);
  flex: 1;
}

.detail-content {
  flex: 1;
}

.detail-image {
  width: 100%;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  border: var(--border-base);
}

.section-block {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 800;
  color: var(--c-text-light);
  text-transform: uppercase;
  letter-spacing: 2rpx;
  margin-bottom: 12rpx;
}

.text-content {
  font-size: 30rpx;
  color: var(--c-text-body);
  line-height: 1.6;
}

.formula-box {
  background: var(--c-bg);
  padding: 24rpx;
  border-radius: 16rpx;
  font-family: serif;
  text-align: center;
}

.memory-hint {
  background: var(--c-accent-light);
  padding: 24rpx;
  border-radius: 16rpx;
  margin: 32rpx 0;
  display: flex;
  gap: 16rpx;
}

.review-actions {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}


