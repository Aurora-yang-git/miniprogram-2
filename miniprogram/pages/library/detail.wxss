.deck-container {
  padding-top: 48rpx;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: var(--lc-text-muted);
  margin-bottom: 24rpx;
}

.back-text {
  font-size: 26rpx;
}

.deck-header-card {
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-2xl);
  padding: 40rpx;
  box-sizing: border-box;
}

.deck-header-top {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.deck-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: flex-end;
}

.deck-header-title {
  font-size: 44rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 16rpx;
}

.deck-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.deck-tag {
  padding: 8rpx 18rpx;
  font-size: 24rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-surface-2);
  color: var(--lc-text-muted);
}

.study-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  border-radius: var(--lc-radius-lg);
  background: var(--lc-primary);
  color: #fff;
  font-size: 26rpx;
}

.study-text {
  color: #fff;
  font-weight: 600;
  font-size: 26rpx;
}

.review-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 14rpx 22rpx;
  border-radius: var(--lc-radius-lg);
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-primary);
  color: var(--lc-primary);
  font-size: 24rpx;
  box-sizing: border-box;
}

.review-text {
  color: var(--lc-primary);
  font-weight: 600;
  font-size: 24rpx;
}

.deck-progress-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.deck-sub {
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.deck-progress-value {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--lc-text);
}

.cards-section {
  margin-top: 40rpx;
}

.empty-card {
  padding: 64rpx;
}

.cards-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card-item {
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-xl);
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 24rpx;
  box-sizing: border-box;
}

.card-content {
  flex: 1;
  min-width: 0;
}

.card-label {
  font-size: 22rpx;
  color: var(--lc-text-muted);
  margin-bottom: 8rpx;
}

.card-q {
  font-size: 26rpx;
  color: var(--lc-text);
  line-height: 1.6;
}

.card-a {
  font-size: 24rpx;
  color: var(--lc-text-muted);
  line-height: 1.6;
}

.card-actions {
  display: flex;
  gap: 12rpx;
}

.icon-btn {
  padding: 12rpx;
  border-radius: var(--lc-radius-lg);
  background: transparent;
}

.fab {
  position: fixed;
  right: 48rpx;
  bottom: calc(48rpx + var(--lc-safe-bottom, 0rpx));
  width: 112rpx;
  height: 112rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.18);
  z-index: 1500;
}

.modal-max {
  display: flex;
  flex-direction: column;
  max-height: 90vh;
}

.mode-tabs {
  padding: 0 32rpx 24rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  box-sizing: border-box;
}

.tab {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  border-radius: var(--lc-radius-lg);
  background: var(--lc-surface-2);
  color: var(--lc-text-muted);
  font-size: 24rpx;
}

.tab.is-active {
  background: var(--lc-primary);
  color: #fff;
}

.modal-scroll {
  flex: 1;
}

.textarea {
  min-height: 240rpx;
  padding-top: 24rpx;
  padding-bottom: 24rpx;
}

.field-label {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 16rpx;
}

.footer-btn-cancel {
  flex: 1;
  background: var(--lc-surface-2);
  color: var(--lc-text);
}

.coming-box {
  padding: 80rpx 16rpx;
  text-align: center;
}

.coming-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.coming-sub {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: var(--lc-text-subtle);
  line-height: 1.6;
}
