<view class="page-container">
  <t-navbar title="我的书架" left-arrow="{{false}}" style="--td-navbar-bg-color: transparent;" />

  <view class="library-header">
    <view class="text-h2">共 {{decks.length}} 个卡组</view>
    <view class="text-caption">点击卡组开始学习</view>
  </view>

  <view class="deck-grid">
    <view class="deck-item add-new" bind:tap="onCreateDeck">
      <view class="dashed-box">
        <t-icon name="add" size="64rpx" color="var(--c-text-light)" />
        <text class="add-text">新建卡组</text>
      </view>
    </view>

    <block wx:for="{{decks}}" wx:key="id">
      <view class="deck-item" bind:tap="onEnterDeck" data-id="{{item.id}}">
        
        <view class="card-stack theme-{{item.theme}}">
          <view class="stack-main">
            <view class="deck-icon">
              <t-icon name="{{item.icon}}" size="48rpx" />
            </view>
            <view class="deck-info">
              <view class="deck-title">{{item.title}}</view>
              <view class="deck-meta">{{item.count}} 张卡片 · {{item.lastReview}}</view>
            </view>
          </view>
          
        </view>
      </view>
    </block>
  </view>

  <view style="height: 100rpx;"></view>
</view>
