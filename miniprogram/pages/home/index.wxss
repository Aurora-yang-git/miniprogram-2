.home-search {
  position: relative;
  margin-bottom: 48rpx;
}

.home-search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}

.home-search-input {
  padding-left: 80rpx;
  padding-right: 80rpx;
}

.home-search-clear {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-surface-2);
  color: var(--lc-text-muted);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  line-height: 1;
  z-index: 2;
}

.home-search-clear:active {
  background: var(--lc-border);
}

.home-placeholder {
  color: var(--lc-text-subtle);
}

.home-chip-scroll {
  margin: 0 -32rpx 48rpx;
}

.home-section {
  margin-top: 48rpx;
}

.home-section-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.home-link {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 12rpx;
}

.home-link-text {
  color: var(--lc-primary);
  font-size: 24rpx;
}

.home-quick-grid {
  margin-top: 0;
}

.home-tile-label {
  font-size: 26rpx;
  color: var(--lc-text);
  font-weight: 600;
  text-align: center;
}

.home-empty {
  padding: 64rpx;
  text-align: center;
}

.home-empty-text {
  color: var(--lc-text-muted);
  font-size: 26rpx;
  line-height: 1.6;
}

.home-deck-list {
  margin-top: 24rpx;
}

.deck-card {
  position: relative;
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-xl);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.deck-card:active {
  border-color: var(--lc-border-strong);
}

.deck-top {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.deck-main {
  flex: 1;
  min-width: 0;
}

.deck-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 12rpx;
}

.deck-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.deck-tag {
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-surface-2);
  color: var(--lc-text-muted);
}

.deck-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.deck-menu-btn {
  padding: 8rpx;
  border-radius: var(--lc-radius-lg);
  background: transparent;
}

.deck-menu-btn:active {
  background: var(--lc-surface-2);
}

.deck-menu {
  position: absolute;
  right: 32rpx;
  top: 96rpx;
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-xl);
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.12);
  padding: 8rpx 0;
  z-index: 30;
  width: 360rpx;
  box-sizing: border-box;
}

.deck-menu-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  color: var(--lc-text);
}

.deck-menu-item:active {
  background: var(--lc-surface-2);
}

.deck-menu-text {
  font-size: 26rpx;
  color: var(--lc-text);
}

.deck-progress-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.deck-meta {
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.deck-progress-value {
  font-size: 24rpx;
  color: var(--lc-text);
  font-weight: 600;
}

.deck-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid var(--lc-border);
}

.deck-footer-left,
.deck-footer-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.deck-footer-text {
  font-size: 22rpx;
  color: var(--lc-text-muted);
}

.deck-footer-green {
  font-size: 22rpx;
  color: var(--lc-success);
}

.deck-menu-overlay {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 20;
}
