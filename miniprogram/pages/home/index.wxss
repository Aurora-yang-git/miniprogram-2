/* 头部微调 */
.header-card { margin-top: 0; background: var(--c-primary-light); border-color: var(--c-primary-light); }
.streak-badge {
  background: #fff; color: var(--c-primary);
  padding: 8rpx 20rpx; border-radius: var(--r-pill);
  font-size: 24rpx; font-weight: 700;
  box-shadow: 0 4rpx 0 rgba(44, 104, 255, 0.2);
}

/* 仪表盘 */
.dashboard-area { padding: 60rpx 0; }
.ring-container {
  width: 420rpx; height: 420rpx;
  position: relative;
  border-radius: 50%;
  background: #fff;
  box-shadow: var(--shadow-float); /* 浮起感 */
  border: 10rpx solid #fff;
}
.ring-track {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  border-radius: 50%;
  border: 30rpx solid var(--c-bg); /* 浅灰底轨 */
  box-sizing: border-box;
}
.ring-progress {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  border-radius: 50%;
  /* 遮罩实现环形 */
  -webkit-mask: radial-gradient(transparent 58%, black 60%);
  mask: radial-gradient(transparent 58%, black 60%);
}
.ring-inner {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  z-index: 2;
}

/* 统计行 */
.stats-row { display: flex; padding: 0 16rpx; }
.stat-item { flex: 1; text-align: center; margin: 0 16rpx; }

/* 榜单样式 (保留原有的) */
.rank-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 32rpx;
  margin: 24rpx 32rpx;
  border: var(--border-base);
  box-shadow: var(--shadow-card);
}

.rank-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--c-text-title);
  margin-bottom: 24rpx;
}

.rank-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rank-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  border-radius: 16rpx;
  background: var(--c-bg);
}

.rank-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 0;
}

.rank-index {
  width: 36rpx;
  text-align: center;
  font-weight: 800;
  color: var(--c-text-body);
}

.rank-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  overflow: hidden;
  background: var(--c-border);
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-fallback {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  color: var(--c-text-title);
}

.rank-name {
  font-size: 26rpx;
  color: var(--c-text-title);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 280rpx;
}

.rank-xp {
  font-size: 26rpx;
  font-weight: 800;
  color: var(--c-primary);
}

.rank-me {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: var(--c-text-light);
  text-align: right;
}
