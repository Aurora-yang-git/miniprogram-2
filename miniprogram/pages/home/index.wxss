.section-mood {
  margin-bottom: 40rpx;
}

.mood-scroll {
  padding: 0 40rpx;
  height: 100rpx;
  display: flex;
}

.mood-pill {
  background: var(--c-white);
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: var(--shadow-card);
  border: 4rpx solid transparent;
  transition: all 0.2s;
}

.mood-pill .emoji {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.mood-pill .txt {
  font-size: 26rpx;
  font-weight: bold;
  color: var(--c-text-main);
}

.mood-pill.active {
  background: var(--c-calm-light);
  border-color: var(--c-calm);
  color: var(--c-calm);
}

.section-ring {
  flex-direction: column;
  margin: 40rpx 0;
}

.ring-wrapper {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  position: relative;
  margin-bottom: -50rpx;
  z-index: 1;
}

.ring-fill {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  transition: background 0.5s ease;
  mask: radial-gradient(transparent 58%, black 60%);
  -webkit-mask: radial-gradient(transparent 58%, black 60%);
  background: conic-gradient(var(--c-action) calc(var(--ringProgress, 0) * 1%), #f0f0f0 0%);
}

.ring-inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.inner-content {
  text-align: center;
}

.inner-content .count {
  font-size: 100rpx;
  font-weight: 900;
  line-height: 1;
  display: block;
  color: var(--c-text-main);
}

.inner-content .label {
  font-size: 24rpx;
  color: var(--c-text-sub);
  font-weight: bold;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.btn-3d-green {
  background: var(--c-action);
  color: #fff;
  font-size: 36rpx;
  font-weight: 900;
  letter-spacing: 2rpx;
  padding: 24rpx 100rpx;
  border-radius: 40rpx;
  border: none;
  box-shadow: var(--shadow-btn-green);
  z-index: 10;
  transition: transform 0.1s;
}

.btn-3d-green:active {
  transform: translateY(10rpx);
  box-shadow: none;
}

.section-stats {
  padding: 0 40rpx;
}

.stat-card {
  width: 47%;
  padding: 24rpx;
  border-radius: var(--r-lg);
  display: flex;
  align-items: center;
  border: 4rpx solid rgba(0, 0, 0, 0.05);
}

.stat-card .icon-box {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.stat-card .val {
  font-size: 36rpx;
  font-weight: 900;
  color: var(--c-text-main);
}

.stat-card .lbl {
  font-size: 22rpx;
  color: var(--c-text-sub);
  font-weight: bold;
  text-transform: uppercase;
}

.yellow-theme {
  background: var(--c-energy-light);
  border-color: var(--c-energy);
}

.purple-theme {
  background: var(--c-knowledge-light);
  border-color: var(--c-knowledge);
}

.rank-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 32rpx;
}

.rank-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1d2129;
  margin-bottom: 16rpx;
}

.rank-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.rank-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 8rpx;
  border-radius: 16rpx;
  background: #f7f8fa;
}

.rank-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  min-width: 0;
}

.rank-index {
  width: 36rpx;
  text-align: center;
  font-weight: 800;
  color: #4e5969;
}

.rank-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #e5e7eb;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-fallback {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  color: #111827;
}

.rank-name {
  font-size: 26rpx;
  color: #1d2129;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 320rpx;
}

.rank-xp {
  font-size: 26rpx;
  font-weight: 800;
  color: #0052d9;
}

.rank-me {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #86909c;
  text-align: right;
}