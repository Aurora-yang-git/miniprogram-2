.page-container {
  height: 100vh;
  background: #f7f8fa;
}

.dashboard {
  padding: 32rpx;
  box-sizing: border-box;
}

.progress-card {
  position: relative;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 24rpx;
}

.progress-text {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.progress-main {
  font-size: 44rpx;
  font-weight: 700;
  color: #1d2129;
}

.progress-sub {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #86909c;
}

.streak-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.streak-title {
  font-size: 28rpx;
  color: #4e5969;
}

.streak-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d2129;
}

.cta {
  margin-top: 16rpx;
}
