page {
  background: var(--lc-bg);
}

.community-container {
  padding-top: 48rpx;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: var(--lc-text-muted);
  margin-bottom: 24rpx;
}

.back-text {
  font-size: 26rpx;
}

.community-title-block {
  margin-bottom: 32rpx;
}

.community-title {
  font-size: 44rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 10rpx;
}

.community-search {
  position: relative;
  margin-bottom: 24rpx;
}

.community-search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 2;
}

.community-search-input {
  padding-left: 80rpx;
  padding-right: 80rpx;
}

.community-search-clear {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 56rpx;
  height: 56rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-surface-2);
  color: var(--lc-text-muted);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  line-height: 1;
  z-index: 2;
}

.community-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.community-tab {
  flex: 1;
  padding: 16rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: var(--lc-text-muted);
  border-radius: var(--lc-radius-lg);
  border: 2rpx solid var(--lc-border);
  background: var(--lc-surface);
  box-sizing: border-box;
}

.community-tab.is-active {
  background: var(--lc-primary-50);
  border-color: var(--lc-primary);
  color: var(--lc-primary);
  font-weight: 600;
}

.community-empty {
  padding: 56rpx;
  text-align: center;
}

.community-empty-text {
  font-size: 28rpx;
  color: var(--lc-text);
  font-weight: 600;
}

.community-empty-sub {
  display: block;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--lc-text-muted);
  line-height: 1.6;
}

.community-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.community-card {
  padding: 32rpx;
}

.community-card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.author-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 0;
}

.author-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: var(--lc-radius-full);
  background: var(--lc-surface-2);
  flex-shrink: 0;
}

.author-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 0;
}

.author-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--lc-text);
}

.author-level {
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.deck-time {
  font-size: 24rpx;
  color: var(--lc-text-subtle);
  flex-shrink: 0;
}

.community-card-content {
  margin-bottom: 24rpx;
}

.deck-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 12rpx;
}

.deck-description {
  display: block;
  font-size: 26rpx;
  color: var(--lc-text-muted);
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.deck-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.deck-tag {
  padding: 8rpx 16rpx;
  background: var(--lc-primary-50);
  color: var(--lc-primary);
  font-size: 24rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.deck-stats {
  display: flex;
  gap: 32rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid var(--lc-border);
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 28rpx;
}

.stat-value {
  font-size: 28rpx;
  color: var(--lc-text-muted);
  font-weight: 600;
}


