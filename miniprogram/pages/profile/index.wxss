.title-block {
  margin-bottom: 24rpx;
}

.stats-hero {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  border-radius: var(--lc-radius-2xl);
  padding: 40rpx;
  color: #fff;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}

.hero-top {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.hero-cell {
  flex: 1;
}

.hero-cell.right {
  text-align: right;
}

.hero-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.75);
  margin-bottom: 8rpx;
}

.hero-value {
  font-size: 56rpx;
  font-weight: 600;
  color: #fff;
}

.hero-bottom {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.25);
}

.mini-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.75);
  margin-bottom: 6rpx;
}

.mini-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.group {
  margin-top: 32rpx;
}

.group-title {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--lc-text-muted);
  margin-bottom: 16rpx;
  padding-left: 8rpx;
}

.group-card {
  background: var(--lc-surface);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-xl);
  overflow: hidden;
}

.row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 28rpx 24rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid var(--lc-border);
  color: var(--lc-text);
}

.row:last-child {
  border-bottom: 0;
}

.row-label {
  flex: 1;
  font-size: 26rpx;
  color: var(--lc-text);
}

.row-value {
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.disclaimer {
  margin-top: 32rpx;
  background: var(--lc-warning-50);
  border: 2rpx solid var(--lc-warning-border);
  border-radius: var(--lc-radius-xl);
  padding: 24rpx;
  box-sizing: border-box;
}

.disclaimer-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--lc-warning-text);
  margin-bottom: 8rpx;
}

.disclaimer-text {
  font-size: 22rpx;
  color: var(--lc-warning-text);
  opacity: 0.9;
  line-height: 1.6;
}

.signout {
  width: 100%;
  margin-top: 32rpx;
  padding: 24rpx;
  border-radius: var(--lc-radius-xl);
  background: var(--lc-danger-50);
  border: 2rpx solid rgba(220, 38, 38, 0.25);
  color: var(--lc-danger);
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.version {
  margin-top: 24rpx;
  text-align: center;
  font-size: 22rpx;
  color: var(--lc-text-muted);
}
