.study-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 24rpx;
}

.study-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--lc-text);
}

.study-sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.card-stage {
  width: 100%;
  height: 720rpx;
  margin-top: 40rpx;
  perspective: 2000rpx;
}

.flip-wrapper {
  width: 100%;
  height: 100%;
  position: relative;
  transform-style: preserve-3d;
  transition: transform 0.6s cubic-bezier(0.2, 0.8, 0.2, 1);
}

.flip-wrapper.flipped {
  transform: rotateY(180deg);
}

.card-face {
  position: absolute;
  inset: 0;
  backface-visibility: hidden;
  border-radius: var(--lc-radius-2xl);
  border: 4rpx solid var(--lc-border);
  padding: 48rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.face-front {
  background: var(--lc-surface);
}

.face-back {
  background: var(--lc-primary);
  border-color: var(--lc-primary-hover);
  transform: rotateY(180deg);
  justify-content: flex-start;
}

.card-kicker {
  font-size: 20rpx;
  letter-spacing: 2rpx;
  text-transform: uppercase;
  color: var(--lc-text-subtle);
  margin-bottom: 24rpx;
}

.back-kicker {
  color: rgba(255, 255, 255, 0.7);
}

.card-text {
  font-size: 32rpx;
  color: var(--lc-text);
  line-height: 1.7;
}

.card-hint {
  margin-top: 48rpx;
  font-size: 22rpx;
  color: var(--lc-text-subtle);
}

.answer-scroll {
  width: 100%;
  flex: 1;
  margin-top: 16rpx;
}

.answer-text {
  color: #fff;
  font-size: 26rpx;
  line-height: 1.7;
  text-align: center;
}

.action-row {
  display: flex;
  gap: 24rpx;
  margin-top: 32rpx;
}

.action-btn {
  flex: 1;
}

.full-btn {
  width: 100%;
  margin-top: 32rpx;
}

/* Summary */
.summary-header {
  text-align: center;
  margin-top: 16rpx;
  margin-bottom: 32rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--lc-text);
}

.summary-sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.summary-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stat-box {
  border-radius: var(--lc-radius-xl);
  padding: 32rpx;
  text-align: center;
  border: 2rpx solid var(--lc-border);
  background: var(--lc-surface);
}

.stat-box.good {
  background: var(--lc-success-50);
  border-color: rgba(22, 163, 74, 0.25);
}

.stat-box.bad {
  background: var(--lc-danger-50);
  border-color: rgba(220, 38, 38, 0.25);
}

.stat-num {
  font-size: 56rpx;
  font-weight: 600;
  color: var(--lc-text);
}

.stat-name {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--lc-text-muted);
}

.review-list {
  padding: 40rpx;
}

.review-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 24rpx;
}

.review-items {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.review-item {
  background: var(--lc-surface-2);
  border: 2rpx solid var(--lc-border);
  border-radius: var(--lc-radius-lg);
  padding: 24rpx;
}

.review-q {
  font-size: 26rpx;
  font-weight: 600;
  color: var(--lc-text);
  margin-bottom: 12rpx;
}

.review-a {
  font-size: 24rpx;
  color: var(--lc-text-muted);
  line-height: 1.6;
}

.done-card {
  border-radius: var(--lc-radius-xl);
  padding: 32rpx;
  background: var(--lc-success-50);
  border: 2rpx solid rgba(22, 163, 74, 0.25);
  color: var(--lc-success);
  text-align: center;
  margin-bottom: 32rpx;
}

.summary-actions {
  display: flex;
  gap: 24rpx;
}
