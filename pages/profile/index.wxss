.page-container {
  min-height: 100vh;
  background: #f7f8fa;
}

.header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 40rpx 32rpx 24rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: #0052d9;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 700;
}

.name {
  font-size: 34rpx;
  font-weight: 700;
  color: #1d2129;
}

.sub {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #86909c;
}

.menu {
  padding: 0 32rpx;
}
